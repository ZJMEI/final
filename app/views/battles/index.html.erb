<h1>Recent Matches</h1>
<%= link_to "Add Match Info", new_battle_path %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Map Name</th>
      <th>Match Type</th>
      <th>Winner</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @battles.each do |battle| %>
      <tr>
        <td><%= battle.date %></td>
        <td><%= battle.map %></td>
        <td><%= battle.btype %></td>
        <td><%= battle.winner %></td>
        <td><%= link_to "Details", battle_path(battle) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
